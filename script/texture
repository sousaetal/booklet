#DATA
data = data.frame("CLAY" = c(5),"SILT" = c(5),"SAND" = c(90))
# Plot the triangle - BRASIL: Lemos & Santos (1996)
TT.plot(class.sys = "BRASIL.TT", tri.data = data, main="Lemos & Santos (1996)")
